<%- include('../partials/header'); -%>


<style>
#pass{
  color: black;
  border: 1px solid black;
  text-align: center;
  margin-top: 10px;
  cursor: pointer;
  border-radius: 10px;
}

#pass:hover{
  
  background-color: #FEE996;
  border: 1px solid #FEE996;
  text-align: center;
  margin-top: 10px;
  cursor: pointer;
  border-radius: 10px;
}
</style>



<body>
  
  
    <div class="form-container">
      
      <form action="/main/newuser" method="POST">
        <div class="form-group">
          <label for="firstName">First Name:</label>
          <input type="text" id="firstName" name="firstName" required>
        </div>
        <div class="form-group">
          <label for="lastName">Last Name:</label>
          <input type="text" id="lastName" name="lastName" required>
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="admin">Admin:</label>
          <select id="admin" name="admin">
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
        </div>
        <div class="form-group">
          <label for="phone">Phone:</label>
          <input type="number" id="phone" name="phone" >
        </div>

        <div class="form-group">
          <label for="password">Password:</label>
          <input type="text" id="password" value="<%= pass %>" name="password" required>
          <div id="pass">Random Password</div>
        </div>
        

        <button type="submit">Submit</button>
      </form>
    </div>
  
  </body>
  
  <script>
    // Function to generate a random password
    function generateRandomPassword() {
      const length = Math.floor(Math.random() * 3) + 6; // Generate length between 6 and 8
      const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()_+';
  
      let password = '';
      for (let i = 0; i < length; i++) {
        const randomIndex = Math.floor(Math.random() * characters.length);
        password += characters.charAt(randomIndex);
      }
  
      return password;
    }
  
    const btn = document.getElementById('pass');
    const passwordInput = document.getElementById('password');
  
    btn.addEventListener('click', () => {
      const newPass = generateRandomPassword(); // Generate random password
      passwordInput.value = newPass; // Set the new value in the input field
    });
  </script>
 